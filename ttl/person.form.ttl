@prefix rdfs:       <http://www.w3.org/2000/01/rdf-schema#> .
@prefix form:       <http://localhost:8070/form.ttl#> .
@prefix personForm: <http://localhost:8070/person.form.ttl#> .
@prefix schema:     <http://schema.org/> .
@prefix focalPoint:       <http://localhost:8070/focalPoint.ttl#> .

<http://localhost:8070/person.form#personForm>
    form:binding schema:Person ;
    a            form:Form .

personForm:name
    a                 form:Field ;
    form:fieldWidget  "string" ;
    form:label        "Name"@en ;
    form:label        "Naam"@nl ;
    form:binding      schema:name ;
    form:order        0 ;
    form:translatable true ;
    form:required     true .

personForm:givenName
    a                 form:Field ;
    form:fieldWidget  "string" ;
    form:label        "First name"@en ;
    form:label        "Voornaam"@nl ;
    form:binding      schema:givenName ;
    form:order        0 ;
    form:translatable true ;
    form:required     true .

personForm:familyName
    a                 form:Field ;
    form:fieldWidget  "string" ;
    form:label        "Last name"@en ;
    form:label        "Achternaam"@nl ;
    form:binding      schema:familyName ;
    form:order        0 ;
    form:translatable true ;
    form:required     true .

personForm:image
    a                   form:Field ;
    form:fieldWidget    "url-image" ;
    form:label          "Image"@en ;
    form:label          "Afbeelding"@nl ;
    form:innerBinding   schema:url ;
    form:innerType      schema:ImageObject ;
    form:binding        schema:image ;
    form:focalPoint     focalPoint:x1, focalPoint:y1, focalPoint:x2, focalPoint:y2 ;
    form:dimensions     schema:width, schema:height ;
    form:order          3 ;
    form:multiple       true ;
    form:translatable   true .
