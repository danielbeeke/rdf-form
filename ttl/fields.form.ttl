@prefix rdfs:       <http://www.w3.org/2000/01/rdf-schema#> .
@prefix form:       <http://localhost:8070/form.ttl#> .
@prefix fieldsForm: <http://localhost:8070/fields.form.ttl#> .
@prefix schema:     <http://schema.org/> .

<http://localhost:8070/person.form#fieldsForm>
    form:binding schema:Thing ;
    a            form:Form .

fieldsForm:string
    a                 form:Field ;
    form:fieldWidget  "string" ;
    form:label        "String" ;
    form:binding      schema:name ;
    form:order        0 ;
    form:translatable true ;
    form:required     true .

fieldsForm:references
    a                 form:Field ;
    form:fieldWidget  "reference" ;
    form:label        "references"@en ;
    form:binding      schema:author ;
    form:order        0 ;
    form:multiple true ;
    form:required     true .
