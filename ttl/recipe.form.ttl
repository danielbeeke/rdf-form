@prefix rdfs:       <http://www.w3.org/2000/01/rdf-schema#> .
@prefix form:       <http://localhost:8080/form.ttl#> .
@prefix recipeForm: <http://localhost:8080/recipe.form.ttl#> .
@prefix schema:     <https://schema.org/> .

<http://localhost:8080/recipe.form#recipeForm>
    form:binding schema:Recipe ;
    a            form:Form .

recipeForm:title
    a                 form:Field ;
    form:fieldWidget  "string" ;
    form:label        "Title"@en ;
    form:label        "Titel"@nl ;
    form:binding      schema:name ;
    form:order        0 ;
    form:translatable true ;
    form:required     true .

recipeForm:author
    a                form:Field ;
    form:fieldWidget "reference" ;
    form:label       "Author"@en ;
    form:label       "Auteur"@nl ;
    form:binding     schema:author ;
    form:multiple    true ;
    form:order       1 ;
    form:required    true .

recipeForm:recipeInstructions
    a                 form:Field ;
    form:fieldWidget  "textarea" ;
    form:label        "Recipe instructions"@en ;
    form:label        "Recept instructies"@nl ;
    form:binding      schema:recipeInstructions ;
    form:order        3 ;
    form:translatable true ;
    form:rows         5 ;
    form:required     true .

recipeForm:totalTime
    a                 form:Field ;
    form:fieldWidget  "duration" ;
    form:label        "Total time"@en ;
    form:label        "Totale tijd"@nl ;
    form:binding      schema:totalTime ;
    form:range        "THM" ;
    form:order        3 ;
    form:translatable true ;
    form:rows         5 ;
    form:required     true .

recipeForm:datePublished
    a                 form:Field ;
    form:fieldWidget  "date" ;
    form:label        "Date"@en ;
    form:label        "Datum"@nl ;
    form:binding      schema:datePublished ;
    form:translatable true ;
    form:order        4 ;
    form:required     true .
