{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "ES2020",
    "target": "es6",
    "lib": [
      "es2015",
      "es2017",
      "es2019",
      "dom"
    ],
    "moduleResolution": "Node",
    "removeComments": true,
    "emitDeclarationOnly": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "baseUrl": "./src",
    "paths": {},
    "declarationMap": true,
    "declaration": true,
    "outDir": "ts"
  },
  "files": ["src/index.ts"],
  "exclude": [
    "scripts",
    "build", 
    "cypress", 
    "snowpack.config.js", 
    "src/js/Translations",
    "src/js/languages.js"
  ]
}